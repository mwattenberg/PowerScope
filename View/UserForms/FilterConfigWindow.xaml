<Window x:Class="PowerScope.View.UserForms.FilterConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PowerScope.View.UserForms"
        xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
        mc:Ignorable="d"
        Title="Filter Configuration" Height="610" Width="400"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="NoResize" 
        WindowStartupLocation="CenterOwner"
        Background="Transparent"
        FontFamily="{DynamicResource {x:Static SystemFonts.MessageFontFamily}}"
        FontSize="{DynamicResource {x:Static SystemFonts.MessageFontSize}}">
    <Window.Resources>
        <!-- Dark theme styles using global resources and system fonts -->
        <Style TargetType="Label" BasedOn="{StaticResource LabelStyle}"/>
        <Style TargetType="ComboBox" BasedOn="{StaticResource SystemFontStyle}">
            <Setter Property="Background" Value="{DynamicResource PlotSettings_TextBoxBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource PlotSettings_LabelForegroundBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource PlotSettings_BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5,3"/>
        </Style>
        <Style TargetType="TextBox" BasedOn="{StaticResource TextBoxStyle}">
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5,3"/>
        </Style>
        <Style TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,5"/>
        </Style>
        <!-- Custom filter button style -->
        <Style x:Key="FilterButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Width" Value="80"/>
            <Setter Property="Height" Value="80"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource PlotSettings_ButtonHoverBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{DynamicResource PlotSettings_ButtonPressedBrush}"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="{DynamicResource PlotSettings_AccentBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- Custom close button style -->
        <Style x:Key="CloseButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource PlotSettings_CloseButtonForegroundBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
        </Style>
        <!-- Style for small text labels under icons -->
        <Style x:Key="SmallLabelStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="{DynamicResource {x:Static SystemFonts.MessageFontFamily}}"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="{DynamicResource PlotSettings_LabelForegroundBrush}"/>
        </Style>
    </Window.Resources>
    
    <!-- Main container with border and drop shadow -->
    <Border Background="{DynamicResource PlotSettings_BackgroundBrush}" 
            BorderBrush="{DynamicResource PlotSettings_BorderBrush}" 
            BorderThickness="1"
            CornerRadius="5">
        <Border.Effect>
            <DropShadowEffect Color="{DynamicResource PlotSettings_ShadowColor}" BlurRadius="10" ShadowDepth="3" Opacity="0.5"/>
        </Border.Effect>
        <Grid Margin="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Custom title bar -->
            <Grid Grid.Row="0" Background="{DynamicResource PlotSettings_TitleBarBrush}" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="Filter Configuration" 
                           Foreground="{DynamicResource PlotSettings_LabelForegroundBrush}" 
                           FontWeight="SemiBold"
                           VerticalAlignment="Center" 
                           Margin="15,8"/>
                <!-- Close button -->
                <Button Grid.Column="1" 
                        Style="{StaticResource CloseButtonStyle}"
                        Content="✕" 
                        Click="CloseButton_Click"
                        ToolTip="Close"/>
            </Grid>

            <!-- Content Area -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="10">
                <StackPanel>
                    <!-- Filter Type Selection Grid -->
                    <Grid HorizontalAlignment="Center" Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>

                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Button Grid.Row="0" Grid.Column="0" x:Name="Button_None" Style="{StaticResource FilterButtonStyle}" Click="FilterButton_Click" Tag="None" ToolTip="No filter applied">
                            <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                                <TextBlock Text="∅" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center" Width="48" Height="48" Margin="10,0,0,0" Foreground="{DynamicResource PlotSettings_LabelForegroundBrush}"/>
                                <TextBlock Text="None" Style="{StaticResource SmallLabelStyle}"/>
                            </StackPanel>
                        </Button>
                        <Button Grid.Row="1" Grid.Column="0" x:Name="Button_LowPass" Style="{StaticResource FilterButtonStyle}" Click="FilterButton_Click" Tag="LowPass" ToolTip="Low Pass Filter">
                            <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                                <svgc:SvgViewbox Source="/Icons/lowpass.svg" Width="48" Height="48" Margin="5"/>
                                <TextBlock Text="Low Pass" Style="{StaticResource SmallLabelStyle}"/>
                            </StackPanel>
                        </Button>
                        <Button Grid.Row="1" Grid.Column="1" x:Name="Button_Notch" Style="{StaticResource FilterButtonStyle}" Click="FilterButton_Click" Tag="Notch" ToolTip="Notch Filter">
                            <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                                <svgc:SvgViewbox Source="/Icons/notch.svg" Width="48" Height="48" Margin="5"/>
                                <TextBlock Text="Notch" Style="{StaticResource SmallLabelStyle}"/>
                            </StackPanel>
                        </Button>
                        <Button Grid.Row="1" Grid.Column="2" x:Name="Button_HighPass" Style="{StaticResource FilterButtonStyle}" Click="FilterButton_Click" Tag="HighPass" ToolTip="High Pass Filter">
                            <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                                <svgc:SvgViewbox Source="/Icons/highpass.svg" Width="48" Height="48" Margin="5"/>
                                <TextBlock Text="High Pass" Style="{StaticResource SmallLabelStyle}"/>
                            </StackPanel>
                        </Button>
                        <Button Grid.Row="2" Grid.Column="0" x:Name="Button_MovingAverage" Style="{StaticResource FilterButtonStyle}" Click="FilterButton_Click" Tag="MovingAverage" ToolTip="Moving Average Filter">
                            <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                                <svgc:SvgViewbox Source="/Icons/movingAverage.svg" Width="48" Height="48" Margin="5"/>
                                <TextBlock Text="Moving Avg" Style="{StaticResource SmallLabelStyle}"/>
                            </StackPanel>
                        </Button>
                        <Button Grid.Row="2" Grid.Column="1" x:Name="Button_Median" Style="{StaticResource FilterButtonStyle}" Click="FilterButton_Click" Tag="Median" ToolTip="Median Filter">
                            <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                                <svgc:SvgViewbox Source="/Icons/median.svg" Width="48" Height="48" Margin="5"/>
                                <TextBlock Text="Median" Style="{StaticResource SmallLabelStyle}"/>
                            </StackPanel>
                        </Button>
                        <Button Grid.Row="2" Grid.Column="2" x:Name="Button_Downsampling" Style="{StaticResource FilterButtonStyle}" Click="FilterButton_Click" Tag="Downsampling" ToolTip="Downsample Filter">
                            <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                                <svgc:SvgViewbox Source="/Icons/downsample.svg" Width="48" Height="48" Margin="5"/>
                                <TextBlock Text="Downsample" Style="{StaticResource SmallLabelStyle}"/>
                            </StackPanel>
                        </Button>
                        <Button Grid.Row="3" Grid.Column="0" x:Name="Button_Absolute" Style="{StaticResource FilterButtonStyle}" Click="FilterButton_Click" Tag="Absolute" ToolTip="Absolute Value">
                            <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                                <svgc:SvgViewbox Source="/Icons/abs.svg" Width="48" Height="48" Margin="5"/>
                                <TextBlock Text="Absolute" Style="{StaticResource SmallLabelStyle}"/>
                            </StackPanel>
                        </Button>
                        <Button Grid.Row="3" Grid.Column="1" x:Name="Button_Squared" Style="{StaticResource FilterButtonStyle}" Click="FilterButton_Click" Tag="Squared" ToolTip="Squared Value">
                            <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                                <svgc:SvgViewbox Source="/Icons/squared.svg" Width="48" Height="48" Margin="5"/>
                                <TextBlock Text="Squared" Style="{StaticResource SmallLabelStyle}"/>
                            </StackPanel>
                        </Button>
                    </Grid>

                    <!-- Filter Parameters Panel -->
                    <Border x:Name="ParametersPanel" BorderBrush="{DynamicResource PlotSettings_BorderBrush}" 
                            BorderThickness="1" CornerRadius="5" Padding="15" Margin="10,0"
                            MinHeight="150">
                        <StackPanel x:Name="ParametersStackPanel">
                            <!-- Content will be dynamically populated based on filter type -->
                        </StackPanel>
                    </Border>
                    
                </StackPanel>
            </ScrollViewer>

            <!-- Bottom area for info text -->
            <TextBlock Grid.Row="2" Text="Changes are applied immediately" 
                       FontStyle="Italic" 
                       Foreground="{DynamicResource PlotSettings_LabelForegroundBrush}" 
                       Opacity="0.7" 
                       HorizontalAlignment="Center" 
                       Margin="0,10"/>
        </Grid>
    </Border>
</Window>
