<Window x:Class="PowerScope.View.UserForms.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About" Height="320" Width="380"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource PlotSettings_BackgroundBrush}">
    <Border BorderBrush="{DynamicResource PlotSettings_BorderBrush}" BorderThickness="1" CornerRadius="5">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <!-- Title bar with close button -->
            <Grid Grid.Row="0" Background="{DynamicResource PlotSettings_TitleBarBrush}" Height="32">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="40"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="About" VerticalAlignment="Center" Margin="10,0,0,0" Foreground="{DynamicResource PlotSettings_LabelForegroundBrush}" FontWeight="SemiBold"/>
                <Button Grid.Column="1" Content="×" Width="32" Height="32" 
                        Click="CloseButton_Click"
                        Background="Transparent"
                        BorderThickness="0"
                        Foreground="{DynamicResource PlotSettings_CloseButtonForegroundBrush}"
                        FontSize="16" FontWeight="Bold"
                        HorizontalAlignment="Right" VerticalAlignment="Center"
                        ToolTip="Close"/>
            </Grid>
            <!-- Centered version textbox -->
            <TextBox Grid.Row="1" Text="PowerScope 1.0 Alpha 3" 
                     HorizontalAlignment="Center"
                     Margin="0,6,0,4" 
                     BorderThickness="0" Background="Transparent" 
                     Foreground="{DynamicResource PlotSettings_LabelForegroundBrush}"
                     FontSize="14" FontWeight="Bold" IsReadOnly="True"/>
            <!-- GitHub link below the version textbox -->
            <TextBlock Grid.Row="2" HorizontalAlignment="Center" Margin="0,1,0,4">
                <Hyperlink NavigateUri="https://github.com/mwattenberg/PowerScope" RequestNavigate="Hyperlink_RequestNavigate">
                    https://github.com/mwattenberg/PowerScope
                </Hyperlink>
            </TextBlock>
            <!-- Acknowledgements and license area -->
            <Grid Grid.Row="3" Margin="12">
                <Border Background="Transparent" BorderThickness="0">
                    <StackPanel>
                        <TextBlock TextWrapping="Wrap" Foreground="{DynamicResource PlotSettings_LabelForegroundBrush}" Margin="0,0,0,8">
                            This software is released under the MIT license and was built on the efforts of many people.
                        </TextBlock>

                        <TextBlock Foreground="{DynamicResource PlotSettings_LabelForegroundBrush}" Margin="0,0,0,4">Acknowledgements:</TextBlock>

                        <TextBlock TextWrapping="Wrap" Margin="8,0,0,2">
                            <Hyperlink NavigateUri="https://scottplot.net/" RequestNavigate="Hyperlink_RequestNavigate">ScottPlot</Hyperlink>
                        </TextBlock>

                        <TextBlock TextWrapping="Wrap" Margin="8,0,0,2">
                            <Hyperlink NavigateUri="https://github.com/Aelian-Software/Aelian.FFT" RequestNavigate="Hyperlink_RequestNavigate">Aelian FFT</Hyperlink>
                        </TextBlock>

                        <TextBlock TextWrapping="Wrap" Margin="8,0,0,2">
                            <Hyperlink NavigateUri="https://github.com/naudio/NAudio" RequestNavigate="Hyperlink_RequestNavigate">NAudio</Hyperlink>
                        </TextBlock>

                        <!-- Optional spacing -->
                        <TextBlock Text="" Height="8"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>
