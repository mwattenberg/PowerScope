<UserControl x:Class="SerialPlotDN_WPF.View.UserControls.MeasurementBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SerialPlotDN_WPF.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="100">
    <Grid Background="{DynamicResource PlotSettings_BackgroundBrush}" MinWidth="120">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>      <!-- Button area -->
            <RowDefinition Height="*"/>         <!-- MeasurementBoxes area -->
        </Grid.RowDefinitions>

        <!-- Buttons area -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <!-- Cursor button -->
            <Button Content="Cursor"
                    Click="Button_Cursor_Click"
                    x:Name="Button_Cursor"
                    Height="32"
                    BorderThickness="0"
                    Background="{DynamicResource PlotSettings_TextBoxBackgroundBrush}"
                    Foreground="{DynamicResource PlotSettings_ButtonForegroundBrush}"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Top"/>
        </Grid>

        <!-- List of measurement boxes -->
        <StackPanel x:Name="Panel_MeasurementBoxes" Grid.Row="1" VerticalAlignment="Top"/>
    </Grid>
</UserControl>