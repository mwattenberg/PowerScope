<UserControl x:Class="PowerScope.View.UserControls.CursorVertical"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PowerScope.View.UserControls"
             xmlns:converters="clr-namespace:PowerScope.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="120"
             MinWidth="120" MinHeight="60">
    
    <UserControl.Resources>
        <converters:ExponentialNotationConverter x:Key="ExponentialNotationConverter"/>
        <converters:TimeUnitConverter x:Key="TimeUnitConverter"/>
        <converters:FrequencyUnitConverter x:Key="FrequencyUnitConverter"/>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>
    
    <Grid Background="{DynamicResource PlotSettings_BackgroundBrush}" Margin="2">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- 4x4 grid for vertical cursors -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>

            <!-- Headers -->
            <TextBlock Grid.Row="0" Grid.Column="1" Foreground="{DynamicResource Highlight_NormalBrush}" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" Text="A"/>
            <TextBlock Grid.Row="0" Grid.Column="2" Foreground="{DynamicResource Highlight_ComplementaryBrush}" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" Text="B"/>
            <TextBlock Grid.Row="0" Grid.Column="3" Text="Î”" Foreground="{DynamicResource PlotSettings_ButtonForegroundBrush}" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>

            <!-- Sample row -->
			<TextBlock Grid.Row="1" Grid.Column="0" Foreground="{DynamicResource PlotSettings_ButtonForegroundBrush}" HorizontalAlignment="Left" VerticalAlignment="Center" FontWeight="Bold"><Run Language="de-at" Text="#"/></TextBlock>
			<TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding CursorASamplePosition, StringFormat={}{0:F0}}" Foreground="{DynamicResource Highlight_NormalBrush}" HorizontalAlignment="Right" VerticalAlignment="Center"/>
            <TextBlock Grid.Row="1" Grid.Column="2" Text="{Binding CursorBSamplePosition, StringFormat={}{0:F0}}" Foreground="{DynamicResource Highlight_ComplementaryBrush}" HorizontalAlignment="Right" VerticalAlignment="Center"/>
            <TextBlock Grid.Row="1" Grid.Column="3" Text="{Binding SampleDelta, StringFormat={}{0:F0}}" Foreground="{DynamicResource PlotSettings_ButtonForegroundBrush}" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,2,0"/>

            <!-- Time row - only visible when sample rate is available -->
            <TextBlock Grid.Row="2" Grid.Column="0" Foreground="{DynamicResource PlotSettings_ButtonForegroundBrush}" HorizontalAlignment="Left" VerticalAlignment="Center"  FontFamily="Times New Roman" FontStyle="Italic" Text="T" Visibility="{Binding HasValidSampleRate, Converter={StaticResource BooleanToVisibilityConverter}}"/>
            <TextBlock Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3" Text="{Binding TimeDelta, Converter={StaticResource TimeUnitConverter}}" Foreground="{DynamicResource PlotSettings_ButtonForegroundBrush}" HorizontalAlignment="Right" VerticalAlignment="Center"  Visibility="{Binding HasValidSampleRate, Converter={StaticResource BooleanToVisibilityConverter}}" Margin="0,0,2,0"/>

            <!-- Frequency row - only visible when sample rate is available -->
            <TextBlock Grid.Row="3" Grid.Column="0" Foreground="{DynamicResource PlotSettings_ButtonForegroundBrush}" HorizontalAlignment="Left" VerticalAlignment="Center"  Text="f" FontFamily="Times New Roman" FontStyle="Italic" Visibility="{Binding HasValidSampleRate, Converter={StaticResource BooleanToVisibilityConverter}}"/>
            <TextBlock Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="3" Foreground="{DynamicResource PlotSettings_ButtonForegroundBrush}" HorizontalAlignment="Right" VerticalAlignment="Center"  Text="{Binding Frequency, Converter={StaticResource FrequencyUnitConverter}}" Visibility="{Binding HasValidSampleRate, Converter={StaticResource BooleanToVisibilityConverter}}" Margin="0,0,2,0"/>
        </Grid>
    </Grid>
</UserControl>