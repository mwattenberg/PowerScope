<UserControl x:Class="SerialPlotDN_WPF.View.UserControls.MeasurementBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SerialPlotDN_WPF.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="120"
             MinWidth="100" MinHeight="60">

    <UserControl.Resources>
        <!-- Value converter for colors -->
        <local:ColorToBrushConverter x:Key="ColorToBrushConverter"/>
    </UserControl.Resources>

    <Grid Background="{DynamicResource PlotSettings_BackgroundBrush}" Margin="2">
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <!-- Header row with colored background -->
            <RowDefinition Height="*"/>
            <!-- Measurement result area -->
        </Grid.RowDefinitions>

        <!-- Header row with colored background matching ChannelControl -->
        <Border Grid.Row="0" 
                Background="{Binding DisplayColor, Converter={StaticResource ColorToBrushConverter}}" 
                CornerRadius="2" 
                Height="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="20"/>
                </Grid.ColumnDefinitions>

                <!-- Channel Label - Uses data binding for automatic updates -->
                <TextBlock Grid.Column="0" 
                           x:Name="ChannelLabelTextBlock"
                           Text="{Binding Label}"
                           Foreground="White" 
                           HorizontalAlignment="Left" 
                           VerticalAlignment="Center"
                           FontWeight="Bold"
                           FontSize="10"
                           Margin="5,0,5,0"/>

                <!-- Measurement Type Label - Set programmatically -->
                <TextBlock 
                           x:Name="MeasurementTypeTextBlock"
                           Text="Temp"
                           Foreground="White" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center"
                           FontWeight="Bold"
                           FontSize="10"/>

                <!-- Remove button -->
                <Button Grid.Column="2"
                        Content="×"
                        Click="Button_Remove_Click"
                        Background="Transparent"
                        BorderThickness="0"
                        Foreground="White"
                        FontSize="12"
                        FontWeight="Bold"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Width="20"
                        Height="20"
                        ToolTip="Remove measurement"/>
            </Grid>
        </Border>

        <!-- Measurement result area -->
        <Grid Grid.Row="1" Background="{DynamicResource PlotSettings_BackgroundBrush}">
            <!-- Result value -->
            <TextBlock x:Name="ResultTextBlock"
                       Text="0.000"
                       Foreground="{DynamicResource PlotSettings_ButtonForegroundBrush}"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="16"
                       FontWeight="Bold"/>
        </Grid>
    </Grid>
</UserControl>
