<UserControl x:Class="PowerScope.View.UserControls.MeasurementBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PowerScope.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="120"
             MinWidth="120" MinHeight="60">

    <UserControl.Resources>
        <!-- Value converter for colors -->
        <local:ColorToBrushConverter x:Key="ColorToBrushConverter"/>
        <!-- Converter to show spectrum button only for FFT measurements -->
        <local:FFTVisibilityConverter x:Key="FFTVisibilityConverter"/>
    </UserControl.Resources>

    <Grid x:Name="MainGrid" Background="{DynamicResource PlotSettings_BackgroundBrush}" Margin="2">
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
            <RowDefinition x:Name="DetailsRow" Height="0"/>
        </Grid.RowDefinitions>

        <!-- Header row with colored background matching ChannelControl -->
        <Border Grid.Row="0" 
                Background="{Binding ChannelSettings.Color, Converter={StaticResource ColorToBrushConverter}}" 
                CornerRadius="2" 
                Height="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="20"/>
                </Grid.ColumnDefinitions>

                <!-- Channel Label - Direct binding to ChannelSettings -->
                <TextBlock Grid.Column="0" 
                           Text="{Binding ChannelSettings.Label}"
                           Foreground="White" 
                           HorizontalAlignment="Left" 
                           VerticalAlignment="Center"
                           FontWeight="Bold"
                           FontSize="10"
                           Margin="5,0,5,0"/>

                <!-- Measurement Type Label - Bound to Measurement -->
                <TextBlock Grid.Column="1"
                           Text="{Binding TypeDisplayName}"
                           Foreground="White" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center"
                           FontWeight="Bold"
                           FontSize="10"/>

                <!-- Spectrum button (only visible for FFT measurements) -->
                <Button Grid.Column="2"
                        Content="📊"
                        Click="Button_Spectrum_Click"
                        Background="Transparent"
                        BorderThickness="0"
                        Foreground="White"
                        FontSize="10"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Width="18"
                        Height="18"
                        ToolTip="Show FFT Spectrum"
                        Visibility="{Binding Type, Converter={StaticResource FFTVisibilityConverter}}"/>

                <!-- Expand/Collapse button -->
                <Button x:Name="ExpandButton" Grid.Column="3"
                        Content="▼"
                        Click="Button_Expand_Click"
                        Background="Transparent"
                        BorderThickness="0"
                        Foreground="White"
                        FontSize="8"
                        FontWeight="Bold"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Width="18"
                        Height="18"
                        ToolTip="Show details"/>

                <!-- Remove button -->
                <Button Grid.Column="4"
                        Content="×"
                        Click="Button_Remove_Click"
                        Background="Transparent"
                        BorderThickness="0"
                        Foreground="White"
                        FontSize="12"
                        FontWeight="Bold"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Width="20"
                        Height="20"
                        ToolTip="Remove measurement"/>
            </Grid>
        </Border>

        <!-- Measurement result area -->
        <Grid Grid.Row="1" Background="{DynamicResource PlotSettings_BackgroundBrush}">
            <!-- Result value - Direct binding to Measurement.Result -->
            <TextBlock Text="{Binding Result, StringFormat=F3}"
                       Foreground="{DynamicResource PlotSettings_ButtonForegroundBrush}"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="16"
                       FontWeight="Bold"/>
        </Grid>

        <!-- Details section (expandable) -->
        <Border x:Name="DetailsPanel" Grid.Row="2" 
                Background="{DynamicResource PlotSettings_BackgroundBrush}"
                BorderBrush="{Binding ChannelSettings.Color, Converter={StaticResource ColorToBrushConverter}}"
                BorderThickness="0,1,0,0"
                Visibility="Collapsed">
            <Grid Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Details header with clear button -->
                <Grid Grid.Row="0" Margin="0,0,0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Clear button -->
                    <Button x:Name="ClearButton" Grid.Column="1"
                            Content="Clear"
                            Click="Button_Clear_Click"
                            Background="Transparent"
                            BorderBrush="{DynamicResource PlotSettings_BorderBrush}"
                            BorderThickness="1"
                            Foreground="{DynamicResource PlotSettings_ButtonForegroundBrush}"
                            FontSize="8"
                            Padding="3,1"
                            Margin="0,0,3,0"
                            ToolTip="Clear measurement history"/>
                    
                    <!-- Collapse button -->
                    <Button x:Name="CollapseButton" Grid.Column="2"
                            Content="▲"
                            Click="Button_Expand_Click"
                            Background="Transparent"
                            BorderThickness="0"
                            Foreground="{DynamicResource PlotSettings_ButtonForegroundBrush}"
                            FontSize="8"
                            FontWeight="Bold"
                            Width="16"
                            Height="16"
                            ToolTip="Hide details"/>
                </Grid>
                
                <!-- Details content -->
                <StackPanel x:Name="DetailsContent" Grid.Row="1" Orientation="Vertical">
                    <!-- Detail labels will be populated dynamically -->
                    <Grid x:Name="Detail1" Margin="0,1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock x:Name="Detail1Label" Grid.Column="0" 
                                   Text="Min:" 
                                   Foreground="{DynamicResource PlotSettings_ButtonForegroundBrush}"
                                   FontSize="10"/>
                        <TextBlock x:Name="Detail1Value" Grid.Column="1" 
                                   Text="{Binding Min, StringFormat=F3}" 
                                   Foreground="{DynamicResource PlotSettings_ButtonForegroundBrush}"
                                   FontSize="10"
                                   FontWeight="SemiBold"/>
                    </Grid>
                    
                    <Grid x:Name="Detail2" Margin="0,1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock x:Name="Detail2Label" Grid.Column="0" 
                                   Text="Max:" 
                                   Foreground="{DynamicResource PlotSettings_ButtonForegroundBrush}"
                                   FontSize="10"/>
                        <TextBlock x:Name="Detail2Value" Grid.Column="1" 
                                   Text="{Binding Max, StringFormat=F3}" 
                                   Foreground="{DynamicResource PlotSettings_ButtonForegroundBrush}"
                                   FontSize="10"
                                   FontWeight="SemiBold"/>
                    </Grid>
                    
                    <Grid x:Name="Detail3" Margin="0,1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock x:Name="Detail3Label" Grid.Column="0" 
                                   Text="Mean:" 
                                   Foreground="{DynamicResource PlotSettings_ButtonForegroundBrush}"
                                   FontSize="10"/>
                        <TextBlock x:Name="Detail3Value" Grid.Column="1" 
                                   Text="{Binding Mean, StringFormat=F3}" 
                                   Foreground="{DynamicResource PlotSettings_ButtonForegroundBrush}"
                                   FontSize="10"
                                   FontWeight="SemiBold"/>
                    </Grid>
                    
                    <Grid x:Name="Detail4" Margin="0,1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock x:Name="Detail4Label" Grid.Column="0" 
                                   Text="Count:" 
                                   Foreground="{DynamicResource PlotSettings_ButtonForegroundBrush}"
                                   FontSize="10"/>
                        <TextBlock x:Name="Detail4Value" Grid.Column="1" 
                                   Text="{Binding SamplesCount}" 
                                   Foreground="{DynamicResource PlotSettings_ButtonForegroundBrush}"
                                   FontSize="10"
                                   FontWeight="SemiBold"/>
                    </Grid>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
