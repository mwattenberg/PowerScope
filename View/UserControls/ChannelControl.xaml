<UserControl x:Class="PowerScope.View.UserControls.ChannelControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PowerScope.View.UserControls"
             MinWidth="100" MinHeight="140">
    <UserControl.Resources>
        <!-- Value converter -->
        <local:ColorToBrushConverter x:Key="ColorToBrushConverter"/>
        
        <!-- Use global button style -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource PlotSettings_TextBoxBackgroundBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="{DynamicResource PlotSettings_BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource PlotSettings_ButtonHoverBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{DynamicResource PlotSettings_ButtonPressedBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- TextBox style for channel label -->
        <Style x:Key="ChannelLabelTextBoxStyle" TargetType="TextBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="TextAlignment" Value="Center"/>
        </Style>
        <!-- TextBox style for gain/offset inputs -->
        <Style x:Key="GainOffsetInputStyle" TargetType="TextBox">
            <Setter Property="Background" Value="{DynamicResource PlotSettings_TextBoxBackgroundBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="{DynamicResource PlotSettings_BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="Padding" Value="2"/>
        </Style>
        <!-- Label style for gain/offset labels -->
        <Style x:Key="GainOffsetLabelStyle" TargetType="Label">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="9"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0"/>
        </Style>
    </UserControl.Resources>
    <Grid x:Name="RootGrid" Height="auto">
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="42"/>
            <RowDefinition Height="32"/>
            <RowDefinition Height="28"/>
        </Grid.RowDefinitions>
        <!-- Top color bar with channel label -->
        <Border x:Name="TopColorBar" Grid.Row="0" Background="{Binding DisplayColor, Converter={StaticResource ColorToBrushConverter}}" CornerRadius="2" Height="20" MouseLeftButtonDown="TopColorBar_MouseLeftButtonDown">
            <TextBox x:Name="ChannelLabelTextBox" Text="{Binding Label}" Style="{StaticResource ChannelLabelTextBoxStyle}" Margin="26,0,25,0" RenderTransformOrigin="0.5,0.5">
                <TextBox.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform AngleY="-0.135"/>
                        <RotateTransform/>
                        <TranslateTransform Y="-0.084"/>
                    </TransformGroup>
                </TextBox.RenderTransform>
            </TextBox>
        </Border>
        <!-- Gain control buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="ButtonGainUp" Width="40" Height="18" Margin="1" Click="ButtonGainUp_Click" 
                   Content="▲"/>
            <Button x:Name="ButtonGainDown" Width="40" Height="18" Margin="1" Click="ButtonGainDown_Click" 
                   Content="▼" ClickMode="Press"/>
        </StackPanel>
        <!-- Middle: Gain and offset inputs -->
        <Border Grid.Row="2" Background="{DynamicResource PlotSettings_TextBoxBackgroundBrush}" CornerRadius="5" Margin="2" BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="15"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <!-- Labels -->
                <Label Grid.Column="0" Grid.Row="0" Content="Offset" Style="{StaticResource GainOffsetLabelStyle}"/>
                <Label Grid.Column="1" Grid.Row="0" Content="Gain" Style="{StaticResource GainOffsetLabelStyle}"/>
                <!-- Input boxes -->
                <TextBox x:Name="OffsetTextBox" Grid.Column="0" Grid.Row="1" 
                         Text="{Binding Offset, StringFormat=F3, UpdateSourceTrigger=LostFocus}" 
                         Style="{StaticResource GainOffsetInputStyle}" 
                         Margin="2,0,1,2"
                         PreviewTextInput="SignedDecimalOnly_PreviewTextInput"/>
                <TextBox x:Name="GainTextBox" Grid.Column="1" Grid.Row="1" 
                         Text="{Binding Gain, StringFormat=F3, UpdateSourceTrigger=LostFocus}" 
                         Style="{StaticResource GainOffsetInputStyle}" 
                         Margin="1,0,2,2"
                         PreviewTextInput="DecimalOnly_PreviewTextInput"/>
            </Grid>
        </Border>
        <!-- Filters button -->
        <Button x:Name="ButtonFilters" Grid.Row="3" Content="Filters" Height="28" FontSize="13" Margin="4,2,4,2" Click="ButtonFilters_Click"/>
        <!-- Measure button -->
        <Button x:Name="ButtonMeasure" Grid.Row="4" Content="Measure" Height="24" FontSize="12" Margin="4,2,4,2" Click="ButtonMeasure_Click"/>
    </Grid>
</UserControl>
