<UserControl x:Class="PowerScope.View.UserControls.ChannelControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PowerScope.View.UserControls"
             MinWidth="100" MinHeight="140"
             FontFamily="{DynamicResource {x:Static SystemFonts.MessageFontFamily}}"
             FontSize="{DynamicResource {x:Static SystemFonts.MessageFontSize}}">
    <UserControl.Resources>
        <!-- Value converter -->
        <local:ColorToBrushConverter x:Key="ColorToBrushConverter"/>
        
        <!-- Use global button style -->
        <Style TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource PlotSettings_ButtonHoverBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{DynamicResource PlotSettings_ButtonPressedBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- Play/Pause button style -->
        <Style x:Key="PlayPauseButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontFamily" Value="{DynamicResource {x:Static SystemFonts.MessageFontFamily}}"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="Width" Value="18"/>
            <Setter Property="Height" Value="18"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#33FFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#66FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- TextBox style for channel label -->
        <Style x:Key="ChannelLabelTextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource ControlLabelTextBoxStyle}">
            <!-- Inherits all properties from the unified ControlLabelTextBoxStyle in App.xaml -->
        </Style>
        <!-- TextBox style for gain/offset inputs -->
        <Style x:Key="GainOffsetInputStyle" TargetType="TextBox" BasedOn="{StaticResource TextBoxStyle}">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="Padding" Value="2"/>
        </Style>
        <!-- Label style for gain/offset labels -->
        <Style x:Key="GainOffsetLabelStyle" TargetType="Label" BasedOn="{StaticResource LabelStyle}">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="9"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0"/>
        </Style>
        
        <!-- Non-bold button style for secondary buttons -->
        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource PlotSettings_ButtonHoverBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{DynamicResource PlotSettings_ButtonPressedBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Grid x:Name="RootGrid" Height="auto">
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="42"/>
            <RowDefinition Height="32"/>
            <RowDefinition Height="28"/>
        </Grid.RowDefinitions>
        <!-- Top color bar with channel label and play/pause button -->
        <Border x:Name="TopColorBar" Grid.Row="0" Background="{Binding DisplayColor, Converter={StaticResource ColorToBrushConverter}}" CornerRadius="2" Height="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <!-- Play/Pause button -->
                <Button x:Name="PlayPauseButton" Grid.Column="0" 
                        Style="{StaticResource PlayPauseButtonStyle}"
                        Click="PlayPauseButton_Click"
                        Margin="1"
                        ToolTip="Enable/Disable channel">
                    <TextBlock x:Name="PlayPauseIcon" Text="▶" FontSize="8" Margin="0"/>
                </Button>
                <!-- Channel label -->
                <TextBox x:Name="ChannelLabelTextBox" Grid.Column="1" 
                         Text="{Binding Label}" 
                         Style="{StaticResource ChannelLabelTextBoxStyle}" 
                         Margin="2,0,2,0" 
                         RenderTransformOrigin="0.5,0.5">
                    <TextBox.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform AngleY="-0.135"/>
                            <RotateTransform/>
                            <TranslateTransform Y="-0.084"/>
                        </TransformGroup>
                    </TextBox.RenderTransform>
                </TextBox>
            </Grid>
        </Border>
        <!-- Gain control buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="ButtonGainUp" Width="40" Height="18" Margin="1" Click="ButtonGainUp_Click" 
                   Content="▲"/>
            <Button x:Name="ButtonGainDown" Width="40" Height="18" Margin="1" Click="ButtonGainDown_Click" 
                   Content="▼" ClickMode="Press"/>
        </StackPanel>
        <!-- Middle: Gain and offset inputs -->
        <Border Grid.Row="2" Background="{DynamicResource PlotSettings_TextBoxBackgroundBrush}" CornerRadius="5" Margin="2" BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="15"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <!-- Labels -->
                <Label Grid.Column="0" Grid.Row="0" Content="Offset" Style="{StaticResource GainOffsetLabelStyle}"/>
                <Label Grid.Column="1" Grid.Row="0" Content="Gain" Style="{StaticResource GainOffsetLabelStyle}"/>
                <!-- Input boxes -->
                <TextBox x:Name="OffsetTextBox" Grid.Column="0" Grid.Row="1" 
                         Text="{Binding Offset, StringFormat=F3, UpdateSourceTrigger=LostFocus}" 
                         Style="{StaticResource GainOffsetInputStyle}" 
                         Margin="2,0,1,2"
                         PreviewTextInput="SignedDecimalOnly_PreviewTextInput"/>
                <TextBox x:Name="GainTextBox" Grid.Column="1" Grid.Row="1" 
                         Text="{Binding Gain, StringFormat=F3, UpdateSourceTrigger=LostFocus}" 
                         Style="{StaticResource GainOffsetInputStyle}" 
                         Margin="1,0,2,2"
                         PreviewTextInput="DecimalOnly_PreviewTextInput"/>
            </Grid>
        </Border>
        <!-- Filters button -->
        <Button x:Name="ButtonFilters" Grid.Row="3" Content="Filters" Height="28" Margin="4,2,4,2" 
                Style="{StaticResource SecondaryButtonStyle}" Click="ButtonFilters_Click"/>
        <!-- Measure button -->
        <Button x:Name="ButtonMeasure" Grid.Row="4" Content="Measure" Height="24" Margin="4,2,4,2" 
                Style="{StaticResource SecondaryButtonStyle}" Click="ButtonMeasure_Click"/>
    </Grid>
</UserControl>
