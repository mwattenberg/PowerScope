<UserControl x:Class="PowerScope.View.UserControls.DataStreamBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PowerScope.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="120">
    
    <UserControl.Resources>
        <!-- Button style matching MeasurementBar buttons -->
        <Style x:Key="AddStreamButtonStyle" TargetType="Button">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="Background" Value="{StaticResource PlotSettings_TextBoxBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource PlotSettings_ButtonForegroundBrush}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="2">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource PlotSettings_ButtonHoverBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{StaticResource PlotSettings_ButtonPressedBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    
    <Grid Background="{DynamicResource PlotSettings_BackgroundBrush}" MinWidth="120">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Add stream button -->
            <RowDefinition Height="*"/>
            <!-- ItemsControl area grows/shrinks -->
        </Grid.RowDefinitions>

        <!-- Borderless, full-width Add Stream button -->
        <Button Content="Add data stream"
                Click="Button_AddStream_Click"
                x:Name="Button_AddStream"
                Height="32"
                FontWeight="Bold"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Top" 
                Grid.Row="0"
                Margin="0,0,0,10"
                Style="{StaticResource AddStreamButtonStyle}"/>

        <!-- List of streams -->
        <StackPanel x:Name="Panel_Streams" Grid.Row="1"/>
        <!--<ItemsControl x:Name="ItemsControl_Streams" Grid.Row="1">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <local:StreamInfoPanel />
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>-->
    </Grid>
</UserControl>