<UserControl x:Class="PowerScope.View.UserControls.DataStreamBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PowerScope.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="120">
    <Grid Background="{DynamicResource PlotSettings_BackgroundBrush}" MinWidth="120">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>      <!-- Add stream button -->
            <RowDefinition Height="*"/>         <!-- ItemsControl area grows/shrinks -->
        </Grid.RowDefinitions>

        <!-- Borderless, full-width Add Stream button -->
        <Button Content="Add data stream"
                Click="Button_AddStream_Click"
                x:Name="Button_AddStream"
                Height="32"
                BorderThickness="0"
                Background="{DynamicResource PlotSettings_TextBoxBackgroundBrush}"
                Foreground="{DynamicResource PlotSettings_ButtonForegroundBrush}"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Top"
                Grid.Row="0"
                Margin="0,0,0,10"/>

        <!-- List of streams -->
        <StackPanel x:Name="Panel_Streams" Grid.Row="1"/>
        <!--<ItemsControl x:Name="ItemsControl_Streams" Grid.Row="1">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <local:StreamInfoPanel />
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>-->
    </Grid>
</UserControl>
