<UserControl x:Class="PowerScope.View.UserControls.CursorChannel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PowerScope.View.UserControls"
             xmlns:converters="clr-namespace:PowerScope.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="25" d:DesignWidth="120"
             MinWidth="120" MinHeight="20">
    <UserControl.Resources>
        <converters:ColorToBrushConverter x:Key="ColorToBrushConverter" />
    </UserControl.Resources>
    <Grid Background="{DynamicResource PlotSettings_BackgroundBrush}" Margin="2">
        <!-- Single row, four columns (first column wider) -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

        <!-- Channel label with color -->
        <TextBlock Grid.Column="0" 
                   Text="{Binding Label}" 
                   Foreground="{Binding Color, Converter={StaticResource ColorToBrushConverter}}" 
                   HorizontalAlignment="Left" 
                   VerticalAlignment="Center" 
                   FontWeight="Bold"/>
        
        <!-- Cursor A value -->
        <TextBlock Grid.Column="1" 
                   Text="{Binding CursorAText}" 
                   Foreground="{DynamicResource Highlight_NormalBrush}" 
                   HorizontalAlignment="Right" 
                   VerticalAlignment="Center" 
                   FontWeight="Normal"/>
        
        <!-- Cursor B value -->
        <TextBlock Grid.Column="2" 
                   Text="{Binding CursorBText}" 
                   Foreground="{DynamicResource Highlight_ComplementaryBrush}" 
                   HorizontalAlignment="Right" 
                   VerticalAlignment="Center" 
                   FontWeight="Normal"/>
        
        <!-- Delta value -->
        <TextBlock Grid.Column="3" 
                   Text="{Binding DeltaText}" 
                   Foreground="{DynamicResource PlotSettings_ButtonForegroundBrush}" 
                   HorizontalAlignment="Right" 
                   VerticalAlignment="Center" 
                   FontWeight="Normal"
                   Margin="0,0,2,0"/>
    </Grid>
</UserControl>
