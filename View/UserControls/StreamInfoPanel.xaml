<UserControl x:Class="PowerScope.View.UserControls.StreamInfoPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PowerScope.View.UserControls"
             xmlns:converters="clr-namespace:PowerScope.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="120" d:DesignWidth="150">
    
    <UserControl.Resources>
        <converters:BooleanToConnectButtonContentConverter x:Key="BooleanToContentConverter"/>
        <converters:BooleanToConnectButtonBackgroundConverter x:Key="BooleanToBackgroundConverter"/>
        
        <!-- Styles for info display -->
        <Style x:Key="InfoTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="2,0,2,0"/>
        </Style>
        <Style x:Key="InfoLabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="LightGray"/>
            <Setter Property="FontSize" Value="9"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="2,0,2,0"/>
        </Style>
    </UserControl.Resources>
    
    <Grid MinWidth="140">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>   <!-- Connect and Close buttons row -->
            <RowDefinition Height="Auto"/>   <!-- Port/Baud and Config button -->
            <RowDefinition Height="Auto"/>   <!-- Port Usage -->
            <RowDefinition Height="Auto"/>   <!-- Samples/sec -->
            <RowDefinition Height="Auto"/>   <!-- Status -->
        </Grid.RowDefinitions>

        <!-- Top row with Connect (left) and Close (right) buttons -->
        <Grid Grid.Row="0" Margin="2,2,2,2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>    <!-- Connect button -->
                <ColumnDefinition Width="*"/>       <!-- Spacer -->
                <ColumnDefinition Width="Auto"/>    <!-- Close button -->
            </Grid.ColumnDefinitions>
            
            <!-- Connect/Disconnect button with play/pause icons (left-aligned) -->
            <Button Grid.Column="0" x:Name="Button_Connect" Content="▶️" Width="22" Height="22" Margin="2,0,2,0"
                    VerticalAlignment="Center" HorizontalAlignment="Left"
                    Click="Button_Connect_Click"
                    Background="Transparent" Foreground="LimeGreen"
                    BorderThickness="0" FontSize="12" FontWeight="Bold"
                    ToolTip="Connect" />
            
            <!-- Spacer -->
            <Border Grid.Column="1"/>
            
            <!-- Close button (right-aligned) -->
            <Button Grid.Column="2" x:Name="Button_Close" Content="✕" Width="22" Height="22" 
                    VerticalAlignment="Center" HorizontalAlignment="Right"
                    Click="Button_Close_Click"
                    Background="Transparent" Foreground="LightGray"
                    BorderThickness="0" FontSize="14" FontWeight="Bold"
                    ToolTip="Remove stream" />
        </Grid>

        <!-- Second row with: PortBaud | Config -->
        <Grid Grid.Row="1" Margin="2,2,2,2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>    <!-- PortBaud -->
                <ColumnDefinition Width="Auto"/>    <!-- Config -->
                <ColumnDefinition Width="*"/>       <!-- Spacer -->
            </Grid.ColumnDefinitions>
            
            <TextBlock Grid.Column="0"
                       x:Name="PortBaudTextBlock"
                       Text=""
                       VerticalAlignment="Center"
                       FontWeight="Bold"
                       Foreground="White"
                       FontSize="11"
                       TextWrapping="NoWrap"
                       Margin="2,0,4,0"
                       HorizontalAlignment="Left"/>
            
            <!-- Config button with wrench icon -->
            <Button Grid.Column="1" x:Name="Button_Configure" Content="🔧" Width="22" Height="22" Margin="2,0,2,0"
                    VerticalAlignment="Center" HorizontalAlignment="Center"
                    Click="Button_Configure_Click"
                    Background="Transparent" Foreground="LightGray"
                    BorderThickness="0" FontSize="12" FontWeight="Bold"
                    ToolTip="Configure stream" />
            
            <!-- Spacer -->
            <Border Grid.Column="2"/>
        </Grid>

        <!-- Port Usage Information -->
        <Grid Grid.Row="2" Margin="4,1,4,1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="Usage:" Style="{StaticResource InfoLabelStyle}"/>
            <TextBlock Grid.Column="1" x:Name="PortUsageTextBlock" Text="0%" 
                       Style="{StaticResource InfoTextStyle}" 
                       HorizontalAlignment="Right"/>
        </Grid>

        <!-- Samples per Second Information -->
        <Grid Grid.Row="3" Margin="4,1,4,1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="Samples/s:" Style="{StaticResource InfoLabelStyle}"/>
            <TextBlock Grid.Column="1" x:Name="SamplesPerSecondTextBlock" Text="0" 
                       Style="{StaticResource InfoTextStyle}" 
                       HorizontalAlignment="Right"/>
        </Grid>

        <!-- Status Information -->
        <Grid Grid.Row="4" Margin="4,1,4,1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="Status:" Style="{StaticResource InfoLabelStyle}"/>
            <TextBlock Grid.Column="1" x:Name="StatusTextBlock" Text="{Binding StatusMessage}" 
                       Style="{StaticResource InfoTextStyle}" 
                       HorizontalAlignment="Right"/>
        </Grid>
    </Grid>
</UserControl>









