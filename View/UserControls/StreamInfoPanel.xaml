<UserControl x:Class="SerialPlotDN_WPF.View.UserControls.StreamInfoPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SerialPlotDN_WPF.View.UserControls"
             xmlns:converters="clr-namespace:SerialPlotDN_WPF.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="120" d:DesignWidth="150">
    
    <UserControl.Resources>
        <converters:BooleanToConnectButtonContentConverter x:Key="BooleanToContentConverter"/>
        <converters:BooleanToConnectButtonBackgroundConverter x:Key="BooleanToBackgroundConverter"/>
        
        <!-- Styles for info display -->
        <Style x:Key="InfoTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="2,0,2,0"/>
        </Style>
        <Style x:Key="InfoLabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="LightGray"/>
            <Setter Property="FontSize" Value="9"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="2,0,2,0"/>
        </Style>
    </UserControl.Resources>
    
    <Grid MinWidth="140">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>   <!-- Port and Baud -->
            <RowDefinition Height="Auto"/>   <!-- Port Usage -->
            <RowDefinition Height="Auto"/>   <!-- Samples/sec -->
            <RowDefinition Height="*"/>      <!-- Connect button -->
            <RowDefinition Height="Auto"/>   <!-- Config button -->
        </Grid.RowDefinitions>

        <!-- Display selected COM port and baud rate -->
        <TextBlock Grid.Row="0"
                   Text="{Binding PortAndBaudDisplay}" 
                   VerticalAlignment="Center" 
                   FontWeight="Bold"
                   Foreground="White"
                   FontSize="12"
                   TextWrapping="Wrap"
                   Margin="4,2,4,2"/>

        <!-- Port Usage Information -->
        <Grid Grid.Row="1" Margin="4,1,4,1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="Usage:" Style="{StaticResource InfoLabelStyle}"/>
            <TextBlock Grid.Column="1" x:Name="PortUsageTextBlock" Text="0%" 
                       Style="{StaticResource InfoTextStyle}" 
                       HorizontalAlignment="Right"/>
        </Grid>

        <!-- Samples per Second Information -->
        <Grid Grid.Row="2" Margin="4,1,4,1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="Samples/s:" Style="{StaticResource InfoLabelStyle}"/>
            <TextBlock Grid.Column="1" x:Name="SamplesPerSecondTextBlock" Text="0" 
                       Style="{StaticResource InfoTextStyle}" 
                       HorizontalAlignment="Right"/>
        </Grid>

        <!-- Connect button -->
        <Button x:Name="Button_Connect" 
                Grid.Row="3" 
                Height="20" 
                VerticalAlignment="Center" 
                Margin="4,2,4,2"
                Click="Button_Connect_Click"
                Content="{Binding ConnectButtonText}"
                Background="{Binding ConnectButtonBackground}"/>
        
        <!-- Config button -->
        <Button x:Name="Button_Configure" 
                Grid.Row="4" 
                Height="18"
                Margin="4,1,4,2"
                Content="Config" 
                Click="Button_Configure_Click" />
    </Grid>
</UserControl>


