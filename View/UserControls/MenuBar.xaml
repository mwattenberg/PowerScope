<UserControl x:Class="PowerScope.View.UserControls.MenuBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PowerScope.View.UserControls"
             mc:Ignorable="d" 
             d:Height="20" d:DesignWidth="800">
    <UserControl.Resources>
        <!-- MenuBar dark theme styles using global resources -->
        <Style TargetType="Menu">
            <Setter Property="Background" Value="{DynamicResource PlotSettings_TitleBarBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource PlotSettings_LabelForegroundBrush}"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <Style TargetType="MenuItem">
            <Setter Property="Background" Value="{DynamicResource PlotSettings_TitleBarBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource PlotSettings_LabelForegroundBrush}"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
    </UserControl.Resources>
    <Border Background="{DynamicResource PlotSettings_BackgroundBrush}"
            BorderBrush="{DynamicResource PlotSettings_BorderBrush}"
            BorderThickness="1"
            CornerRadius="5">
        <Menu Height="20" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            <MenuItem Header="File">
                <MenuItem Header="Save Settings"/>
                <MenuItem Header="Open Settings"/>
                <MenuItem Header="Export as">
                    <MenuItem Header="PNG"/>
                    <MenuItem Header="SVG"/>
                    <MenuItem Header="CSV"/>
                </MenuItem>
                <MenuItem Header="Exit"/>
            </MenuItem>
            <MenuItem Header="Edit">
                <MenuItem Header="Preferences"/>
            </MenuItem>
            <MenuItem Header="View">
                <MenuItem Header="Grid"/>
                <MenuItem Header="Minor Grid"/>
            </MenuItem>
            <MenuItem Header="Help">
                <MenuItem Header="About"/>
                <MenuItem Header="Software releases"/>
            </MenuItem>
        </Menu>
    </Border>
</UserControl>
